<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snack_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_backgrond">

    <include layout="@layout/ui_view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:layout_marginTop="@dimen/fifteen"
            android:src="@mipmap/ico_avatar"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:text="Hi，phc001001001"
            android:textSize="@dimen/t_sixteen"
            android:textColor="@color/theme_color"/>
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:text="当前等级：V1创业会员"
            android:textSize="@dimen/t_sixteen"
            android:textColor="@color/theme_font"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/member_center"
        android:padding="@dimen/ten"
        android:textSize="@dimen/t_sixteen"
        android:textColor="@color/theme_black"/>
    <LinearLayout
        android:id="@+id/ll_message1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/member_level1"
            android:textSize="@dimen/t_sixteen"
            android:textColor="@color/theme_font"/>
        <ImageView
            android:id="@+id/iv_img1"
            android:layout_width="@dimen/eighteen"
            android:layout_height="@dimen/eighteen"
            android:src="@drawable/check_selected_img"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten"
        android:layout_marginTop="@dimen/two"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/member_level2"
            android:textSize="@dimen/t_sixteen"
            android:textColor="@color/theme_font"/>
        <ImageView
            android:id="@+id/iv_img2"
            android:layout_width="@dimen/eighteen"
            android:layout_height="@dimen/eighteen"
            android:src="@drawable/check_selected_img"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_message3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten"
        android:layout_marginTop="@dimen/two"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/member_level3"
            android:textSize="@dimen/t_sixteen"
            android:textColor="@color/theme_font"/>
        <ImageView
            android:id="@+id/iv_img3"
            android:layout_width="@dimen/eighteen"
            android:layout_height="@dimen/eighteen"
            android:src="@drawable/check_selected_img"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_message4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten"
        android:layout_marginTop="@dimen/two"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/member_level4"
            android:textSize="@dimen/t_sixteen"
            android:textColor="@color/theme_font"/>
        <ImageView
            android:id="@+id/iv_img4"
            android:layout_width="@dimen/eighteen"
            android:layout_height="@dimen/eighteen"
            android:src="@drawable/check_selected_img"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten"
        android:textSize="@dimen/t_sixteen"
        android:textColor="@color/theme_black"/>
    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/forty_five"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:layout_marginTop="@dimen/twenty"
        android:text="@string/member_up"
        android:textColor="@android:color/white"
        android:textSize="@dimen/t_sixteen"
        android:background="@drawable/check_selected_click"
        android:gravity="center"/>
</LinearLayout>