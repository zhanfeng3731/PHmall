<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_backgrond">

    <include layout="@layout/ui_view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="@dimen/ten">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_balance"
            android:textSize="@dimen/t_eighteen"
            android:textColor="@color/theme_black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:text="ï¿¥100.00"
            android:textSize="@dimen/t_twenty"
            android:textColor="@color/theme_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/fifteen"
            android:text="@string/account_tab1"
            android:background="@android:color/white"
            android:textColor="@color/theme_black"
            android:textSize="@dimen/t_eighteen"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/fifteen"
            android:text="@string/account_tab2"
            android:background="@android:color/white"
            android:textColor="@color/theme_black"
            android:textSize="@dimen/t_eighteen"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/fifteen"
            android:text="@string/account_tab3"
            android:background="@android:color/white"
            android:textColor="@color/theme_black"
            android:textSize="@dimen/t_eighteen"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
