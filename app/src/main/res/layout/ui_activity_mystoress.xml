<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_backgrond">

    <include layout="@layout/ui_view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@color/theme_backgrond"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺经营信息"
                    android:textSize="@dimen/t_twenty"
                    android:textColor="@color/theme_red"
                    android:textStyle="bold"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_storeid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:id="@+id/tv_star"
                    android:layout_width="@dimen/five"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/five"
                    android:text="*"
                    android:textColor="@color/theme_match" />

                <TextView
                    android:id="@+id/tv_storeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_star"
                    android:paddingLeft="@dimen/ten"
                    android:text="商家账号"
                    android:textStyle="bold"
                    android:textColor="@color/theme_blacker"
                    android:textSize="@dimen/t_eighteen" />

                <EditText
                    android:id="@+id/et_storeid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_toRightOf="@id/tv_storeid"
                    android:background="@color/white"
                    android:gravity="right"
                    android:hint="请输入商家账号"
                    android:textSize="@dimen/t_fifteen"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@color/theme_backgrond"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="此账号为以后登录和管理商家使用，注册后不能修改" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_storename"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:id="@+id/tv_star1"
                    android:layout_width="@dimen/five"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/five"
                    android:text="*"
                    android:textColor="@color/theme_match" />

                <TextView
                    android:id="@+id/tv_storename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_star1"
                    android:paddingLeft="@dimen/ten"
                    android:text="店铺名称"
                    android:textStyle="bold"
                    android:textColor="@color/theme_blacker"
                    android:textSize="@dimen/t_eighteen" />

                <EditText
                    android:id="@+id/et_storename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_toRightOf="@id/tv_storename"
                    android:background="@color/white"
                    android:gravity="right"
                    android:hint="请输入店铺名称"
                    android:textSize="@dimen/t_fifteen"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@color/theme_backgrond"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺名称注册后不能修改，请牢记" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_storelevel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:id="@+id/tv_star2"
                    android:layout_width="@dimen/five"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/five"
                    android:text="*"
                    android:textColor="@color/theme_match" />

                <TextView
                    android:id="@+id/tv_storelevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_star2"
                    android:paddingLeft="@dimen/ten"
                    android:text="店铺等级"
                    android:textStyle="bold"
                    android:textColor="@color/theme_blacker"
                    android:textSize="@dimen/t_eighteen" />

                <Spinner
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_toRightOf="@id/tv_storelevel"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_storetime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:id="@+id/tv_star3"
                    android:layout_width="@dimen/five"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/five"
                    android:text="*"
                    android:textColor="@color/theme_match" />

                <TextView
                    android:id="@+id/tv_storetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_star3"
                    android:paddingLeft="@dimen/ten"
                    android:text="开店时长"
                    android:textStyle="bold"
                    android:textColor="@color/theme_blacker"
                    android:textSize="@dimen/t_eighteen" />

                <Spinner
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_toRightOf="@id/tv_storetime"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_storeform"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:id="@+id/tv_star4"
                    android:layout_width="@dimen/five"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/five"
                    android:text="*"
                    android:textColor="@color/theme_match" />

                <TextView
                    android:id="@+id/tv_storeform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_star4"
                    android:paddingLeft="@dimen/ten"
                    android:text="店铺等级"
                    android:textStyle="bold"
                    android:textColor="@color/theme_blacker"
                    android:textSize="@dimen/t_eighteen" />

                <Spinner
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_toRightOf="@id/tv_storeform"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/two"
                android:background="@color/theme_backgrond"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺分类注册后不能修改，请牢记" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_managekinds"
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_hundred"
                android:layout_marginTop="@dimen/two"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:id="@+id/tv_star5"
                    android:layout_width="@dimen/five"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginLeft="@dimen/five"
                    android:text="*"
                    android:textColor="@color/theme_match" />

                <TextView
                    android:id="@+id/tv_managekinds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_star5"
                    android:layout_toRightOf="@id/tv_star5"
                    android:paddingLeft="@dimen/ten"
                    android:text="店铺等级"
                    android:textStyle="bold"
                    android:textColor="@color/theme_blacker"
                    android:textSize="@dimen/t_eighteen" />

                <Spinner
                    android:id="@+id/spn1"
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_below="@+id/tv_star5"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginTop="@dimen/twenty" />

                <Spinner
                    android:id="@+id/spn2"
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_below="@+id/tv_star5"
                    android:layout_alignTop="@id/spn1"
                    android:layout_toRightOf="@id/spn1"
                    android:layout_marginLeft="@dimen/twenty" />

                <Spinner
                    android:id="@+id/spn3"
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_below="@+id/tv_star5"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_alignTop="@id/spn1"
                    android:layout_toRightOf="@id/spn2" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_present"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty_five"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginTop="@dimen/thirty"
                android:layout_marginBottom="@dimen/ten"
                android:text="提交申请"
                android:textColor="@android:color/white"
                android:textSize="@dimen/t_sixteen"
                android:background="@drawable/radius_solid_theme"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>