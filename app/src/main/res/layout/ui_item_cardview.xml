<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chitcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/five"
        app:cardBackgroundColor="@color/white">
        <!--app:cardCornerRadius="@dimen/ten"-->
        <!--app:cardElevation="@dimen/ten">-->
    <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="@dimen/seventy_five"
        android:orientation="horizontal"
        android:weightSum="3">
            <ImageView
                android:id="@+id/iv_cardimage"
                android:layout_width="@dimen/sixty"
                android:layout_height="@dimen/sixty"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
                android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/thirteen"
                android:text="红木家居旗舰店代金券"
                android:textColor="@color/theme_blacker"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/usedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirteen"
                android:layout_marginTop="@dimen/seven"
                android:layout_toRightOf="@id/iv_cardimage"
                android:text="使用期限2016.8.30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
                android:background="@color/theme_match">
                <TextView
                    android:id="@+id/tv_djqmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/ten"
                    android:layout_gravity="right"
                    android:paddingRight="@dimen/ten"
                    android:text="￥50"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满100使用"
                    android:layout_gravity="right"
                    android:paddingRight="@dimen/ten"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/five" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/three" />
</android.support.v7.widget.CardView>


